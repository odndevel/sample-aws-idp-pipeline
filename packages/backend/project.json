{
  "name": "@idp-v2/backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/backend/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "dependsOn": ["lint", "compile", "test"]
    },
    "compile": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/packages/backend/tsc"],
      "options": {
        "command": "tsc --build tsconfig.lib.json",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/packages/backend"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx src/server.ts",
        "cwd": "{projectRoot}"
      }
    }
  },
  "metadata": {
    "generator": "ts#project"
  }
}
