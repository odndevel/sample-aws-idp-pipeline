{
  "name": "idp_v2.idp_agent",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/agents/idp-agent",
  "tags": [],
  "metadata": {
    "generator": "py#project",
    "ports": [8081],
    "components": [
      {
        "generator": "py#strands-agent",
        "name": "idp-agent",
        "port": 8081
      }
    ]
  },
  "targets": {
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "build": {
      "dependsOn": ["lint", "compile", "bundle"],
      "options": {
        "outputPath": "{workspaceRoot}/dist/packages/agents/idp-agent"
      }
    },
    "compile": {
      "executor": "@nxlv/python:build",
      "outputs": [
        "{workspaceRoot}/dist/packages/agents/idp-agent/build"
      ],
      "options": {
        "outputPath": "{workspaceRoot}/dist/packages/agents/idp-agent/build",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      },
      "cache": true
    },
    "format": {
      "executor": "@nxlv/python:ruff-format",
      "outputs": [],
      "options": {
        "filePatterns": ["*.py"]
      },
      "cache": true
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "verbose": false,
        "debug": false
      }
    },
    "lint": {
      "executor": "@nxlv/python:ruff-check",
      "outputs": [],
      "options": {
        "lintFilePatterns": ["*.py"]
      },
      "cache": true,
      "dependsOn": ["format"]
    },
    "lock": {
      "executor": "@nxlv/python:lock",
      "options": {
        "update": false
      }
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "sync": {
      "executor": "@nxlv/python:sync",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "bundle-arm": {
      "cache": true,
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/dist/packages/agents/idp-agent/bundle-arm",
        "{projectRoot}/bundle-arm"
      ],
      "options": {
        "commands": [
          "uv export --frozen --no-dev --no-editable --project packages/agents/idp-agent --package idp_v2.idp_agent -o dist/packages/agents/idp-agent/bundle-arm/requirements.txt",
          "uv pip install -n --no-deps --no-installer-metadata --no-compile-bytecode --python-platform aarch64-manylinux2014 --target dist/packages/agents/idp-agent/bundle-arm -r dist/packages/agents/idp-agent/bundle-arm/requirements.txt",
          "rm -rf packages/agents/idp-agent/bundle-arm && cp -r dist/packages/agents/idp-agent/bundle-arm packages/agents/idp-agent/bundle-arm"
        ],
        "parallel": false
      },
      "dependsOn": ["compile"]
    },
    "bundle": {
      "dependsOn": ["bundle-arm"]
    },
    "idp-agent-docker": {
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker build --platform linux/arm64 -t idp-v2-idp-agent:latest packages/agents/idp-agent --build-context workspace=."
        ],
        "parallel": false
      },
      "dependsOn": ["bundle-arm"]
    },
    "docker": {
      "dependsOn": ["idp-agent-docker"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "uv run fastapi dev main.py --port 8081"
        ],
        "cwd": "{projectRoot}"
      },
      "continuous": true
    }
  }
}
