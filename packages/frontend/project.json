{
  "name": "@idp-v2/frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/frontend/src",
  "projectType": "application",
  "tags": [],
  "metadata": {
    "generator": "ts#react-website",
    "uxProvider": "None",
    "components": [
      {
        "generator": "ts#react-website#runtime-config"
      },
      {
        "generator": "ts#react-website#auth"
      }
    ]
  },
  "targets": {
    "build": {
      "dependsOn": ["lint", "compile", "bundle", "test"],
      "options": {
        "outputPath": "dist/packages/frontend/bundle"
      }
    },
    "bundle": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/frontend/bundle"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "compile": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}/tsc"],
      "options": {
        "command": "tsc --build tsconfig.app.json",
        "cwd": "{projectRoot}"
      }
    },
    "load-runtime-config": {
      "executor": "nx:run-commands",
      "metadata": {
        "description": "Load runtime config from your deployed stack for dev purposes. You must set your AWS CLI credentials whilst calling 'pnpm exec nx run @idp-v2/frontend:load:runtime-config'"
      },
      "options": {
        "command": "aws s3 cp s3://`aws cloudformation describe-stacks --query \"Stacks[?starts_with(StackName, 'idp-v2-')][].Outputs[] | [?contains(OutputKey, 'FrontendWebsiteBucketName')].OutputValue\" --output text`/runtime-config.json './packages/frontend/public/runtime-config.json'"
      }
    },
    "preview": {
      "dependsOn": ["build"],
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "@idp-v2/frontend:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "@idp-v2/frontend:build:development"
        },
        "production": {
          "buildTarget": "@idp-v2/frontend:build:production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "@idp-v2/frontend:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "@idp-v2/frontend:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "@idp-v2/frontend:build:production",
          "hmr": false
        }
      }
    },
    "serve-local": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "@idp-v2/frontend:build:development",
        "hmr": true,
        "mode": "serve-local"
      },
      "continuous": true
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "@idp-v2/frontend:build",
        "spa": true
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/packages/frontend"
      }
    }
  }
}
